{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "target": "es6",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules"]
}
